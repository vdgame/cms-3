---
const currentYear = new Date().getFullYear();

// 模拟页脚链接数据
const quickLinks = [
  { name: "关于我们", href: "/about" },
  { name: "使用条款", href: "/terms" },
  { name: "隐私政策", href: "/privacy" },
  { name: "帮助中心", href: "/help" },
  { name: "联系我们", href: "/contact" },
];

const categories = [
  { name: "前端开发", href: "/tag/frontend" },
  { name: "后端开发", href: "/tag/backend" },
  { name: "移动开发", href: "/tag/mobile" },
  { name: "人工智能", href: "/tag/ai" },
  { name: "数据科学", href: "/tag/data-science" },
];

const socialMedia = [
  { name: "微博", href: "https://weibo.com", icon: "weibo" },
  { name: "微信", href: "#", icon: "wechat" },
  { name: "GitHub", href: "https://github.com", icon: "github" },
  { name: "知乎", href: "https://zhihu.com", icon: "zhihu" },
];
---

<footer class="bg-gray-100 border-t border-gray-200 mt-8">
  <div class="container py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- 网站信息 -->
      <div>
        <h3 class="text-lg font-bold mb-4">ContentPlatform</h3>
        <p class="text-gray-600 mb-4">
          汇聚优质的技术内容，连接开发者社区，分享知识与经验。
        </p>
        <div class="flex space-x-4">
          {socialMedia.map(item => (
            <a
              href={item.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-500 hover:text-blue-500"
              aria-label={item.name}
